{
  "name": "mydesktop-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd .. && npm run dev",
    "dev-server": "tsx watch src/index.ts --color",
    "build": "NODE_ENV=development rm -rf ./dist && tsc --build . --pretty && tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint . --fix --cache",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.3.0",
    "fastify": "^5.6.2",
    "fastify-cors": "^6.1.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
